mixin home()
    - var prev = page.prev_link
    - var next = page.next_link
    if page.prev || page.next
        .paginator
            if page.prev
                a.prev.no-barba(href=url_for(prev))
                    != __('prev')
            if page.next
                a.next.no-barba(href=url_for(next))
                    != __('next')

mixin post()
    - var prev = page.prev ? page.prev.path : false;
    - var next = page.next ? page.next.path : false;
    if prev || next
        .paginator
            if prev
                a.prev.no-barba(href=url_for(prev))
                    != __('prev_post')
            if next
                a.next.no-barba(href=url_for(next))
                    != __('next_post')
