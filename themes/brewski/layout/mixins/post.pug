mixin postInfo(item)
    .post-info
        a
        != full_date(item.date, config.datetime_format || 'YYYY-MM-DD')
        if item.tags && item.tags.length && (is_home() || is_post())
            span.post-tags
                - item.tags.each(function(tag) {
                    a.post-tag(href=url_for(tag.path))= '#' + tag.name
                - })
        if is_post()
            span.post-pv(title='阅读量')
                span.post-pv-icon(aria-hidden='true')
                    | <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16"><path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/><path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/></svg>
                span#vercount_value_page_pv 0
        if item.from && (is_home() || is_post())
            a.post-from(href=item.from, target='_blank', title=item.from)
                != __('translate_original')

mixin postTitle(title)
    if title
        != title
    else
        != __('untitled')

//- Index Page
mixin posts()
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href=url_for(item.path) class="no-barba")
                            +postTitle(item.title)
                    +postInfo(item)
                    .post-content
                        != item.excerpt
                    //- a.read-more(href=url_for(item.path))
                    //-     != __('read_more')
        - })

//- Archive Page
mixin postList()
    .archive
        - var groups = [];
        - var current = null;
        - page.posts.each(function (item) {
            - var itemYear = date(item.date, 'YYYY') - 0;
            - if (!current || current.year !== itemYear) {
                - current = { year: itemYear, items: [] };
                - groups.push(current);
            - }
            - current.items.push(item);
        - })
        - groups.forEach(function (group) {
            .archive-group
                h2.archive-year
                    != group.year
                - group.items.forEach(function (item) {
                    .post-item
                        a.post-title-link(href=url_for(item.path))
                            +postTitle(item.title)
                        p.post-line
                        +postInfo(item)
                - })
        - })

//- Tag Page (flat list)
mixin postListFlatItems(posts)
    if posts && posts.length
        - posts.each(function (item) {
            .post-item
                a.post-title-link(href=url_for(item.path))
                    +postTitle(item.title)
                p.post-line
                +postInfo(item)
        - })

mixin postListFlat(posts, wrap)
    if wrap !== false
        .archive.tag-archive
            +postListFlatItems(posts)
    else
        +postListFlatItems(posts)

//- Post Page
mixin post(item)
    .post.post-layout
        if item.toc !== false
            aside.post-toc-region(aria-label='文章目录')
                .post-toc-system
                    nav.post-toc-rail(aria-label='目录缩略条')
                        ol.post-toc-rail-list
                    nav.post-toc-panel(aria-label='文章目录')
                        .post-toc-panel-head
                            span.post-toc-title 文章目录
                        .post-toc-list-wrap
                            span.post-toc-indicator
                            ol.post-toc-list
        article.post-block.post-main
            h1.post-title
                +postTitle(item.title)
            +postInfo(item)
            if item.ai_summary
                section.post-ai-summary
                    .post-ai-summary-label AI 摘要
                    p.post-ai-summary-content= item.ai_summary
            .post-content
                != item.content
            - var toBool = function(value) {
            -     if (typeof value === 'boolean') return value
            -     if (typeof value === 'number') return value !== 0
            -     if (typeof value === 'string') {
            -         var normalized = value.trim().toLowerCase()
            -         if (!normalized) return false
            -         return normalized !== 'false' && normalized !== '0' && normalized !== 'no' && normalized !== 'off'
            -     }
            -     return !!value
            - }
            - var isAi = toBool(item.ai)
            - var isOriginal = toBool(item.original)
            //- if isAi || isOriginal
                .post-declare
                    if isAi
                        .post-declare-item.post-declare-ai 本文章部分内容由 AI 润色
                    if isOriginal
                        .post-declare-item.post-declare-original 本文为独立原创，禁止任何形式未经授权的复制、抄袭、改编或转载。发现侵权行为，将依法追究责任，保留维权权利。
